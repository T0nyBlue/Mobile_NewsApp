<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <HorizontalScrollView
       android:layout_width="match_parent"
      android:layout_margin="6dp"
       android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <android.widget.Button
             android:id="@+id/btn_1"
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:layout_margin="6dp"
             android:background="@drawable/health"
             android:padding="6dp"
             android:text="health"
             android:textColor="#FFFCDE"
             android:textSize="18sp"
             android:textStyle="bold">

         </android.widget.Button>

         <android.widget.Button
             android:id="@+id/btn_2"
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:layout_margin="6dp"
             android:background="@drawable/business"
             android:padding="6dp"
             android:text="business"
             android:textColor="#FFFCDE"
             android:textSize="18sp"
             android:textStyle="bold">

         </android.widget.Button>

         <android.widget.Button
             android:id="@+id/btn_3"
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:layout_margin="6dp"
             android:background="@drawable/science2"
             android:padding="6dp"
             android:text="science"
             android:textColor="#FFFCDE"
             android:textSize="18sp"
             android:textStyle="bold">

         </android.widget.Button>

         <android.widget.Button
             android:id="@+id/btn_4"
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:layout_margin="6dp"
             android:background="@drawable/tech1"
             android:padding="6dp"
             android:text="technology"
             android:textColor="#FFFCDE"
             android:textSize="16sp"
             android:textStyle="bold">

         </android.widget.Button>

         <android.widget.Button
             android:id="@+id/btn_5"
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:layout_margin="6dp"
             android:background="@drawable/sports1"
             android:padding="6dp"
             android:text="sports"
             android:textColor="#FFFCDE"
             android:textSize="18sp"
             android:textStyle="bold">

         </android.widget.Button>
         <android.widget.Button
             android:id="@+id/btn_6"
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:layout_margin="6dp"
             android:background="@drawable/enter"
             android:padding="6dp"
             android:text="entertainment"
             android:textColor="#FFFCDE"
             android:textSize="15sp"
             android:textStyle="bold">

         </android.widget.Button>

      </LinearLayout>

   </HorizontalScrollView>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
     android:layout_margin="14dp"
      android:elevation="8dp"
      android:layout_height="wrap_content">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.widget.Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="general"
            android:textSize="0sp"
          android:layout_margin="10dp"
           android:id="@+id/btn_7"
           android:background="@drawable/home"/>
     <androidx.appcompat.widget.SearchView
         android:layout_width="match_parent"
        android:id="@+id/search_view"
        app:defaultQueryHint="Search News..."
        app:iconifiedByDefault="false"
         android:layout_height="?attr/actionBarSize">

     </androidx.appcompat.widget.SearchView>
     </LinearLayout>
  </androidx.cardview.widget.CardView>

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/recycler_main"
       android:layout_margin="8dp">



   </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>